<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.scadar.kaitenplugin</id>
    <name>Kaiten Integration</name>
    <vendor url="https://github.com/Scadar" email="roman.miroshnikov.private@gmail.com">Roman Miroshnikov</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.scadar.kaitenplugin.ui.KaitenToolWindowFactory" id="Kaiten" icon="/icons/kaiten-integration.svg"/>
        <applicationConfigurable
            parentId="tools"
            instance="com.github.scadar.kaitenplugin.settings.KaitenSettingsConfigurable"
            id="com.github.scadar.kaitenplugin.settings.KaitenSettingsConfigurable"
            displayName="Kaiten Integration"/>
        <notificationGroup id="Kaiten Notifications" displayType="BALLOON"/>
    </extensions>

    <actions>
        <action id="Kaiten.InsertTaskRef"
                class="com.github.scadar.kaitenplugin.vcs.InsertTaskRefAction"
                text="Insert Kaiten Task Reference"
                description="Pre-fill commit message with the Kaiten task ID and title from the current branch"
                icon="/icons/kaiten-integration.svg">
            <add-to-group group-id="Vcs.MessageActionGroup" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
